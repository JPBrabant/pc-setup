{
    // Spaces instead of tab
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // Prefer Cascadia Code Nerd Font (ligatures and icons)
    "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Cascadia Code NF', Consolas, 'Courier New', monospace",

    // No welcome screen
    "workbench.startupEditor": "none",

    // No security
    "security.workspace.trust.enabled": false,

    // Word wrap for plain text files
    "[plaintext]": {
        "editor.wordWrap": "on"
    },

    // In an empty file, don't show recommendations
    "workbench.editor.empty.hint": "hidden",

    
    // TODO : Clean those settings
    "explorer.confirmPasteNative": false,
    "explorer.confirmDelete": false,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "notebook.lineNumbers": "on",
    "git.openRepositoryInParentFolders": "never"
}